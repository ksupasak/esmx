<div style="width:100%;border:0px solid">
	<h1 id="edit_service">Edit Service</h1>
<%= form_for(:service,:url=>{:action=>"edit"},:remote=>true) do |f| %>
<span style='float:right'><%= f.submit 'Update' %> </span>
<br/>
<%= hidden_field_tag :id, @service.id %>
<%= render :partial=> 'service', :locals=>{:f=>f} %>
<br/>
<span style='float:left'>
<%= f.submit 'Update' ,:class=>bt_class%> | <%= link_to 'Export&Import', {:action=>'service_import_export',:id=>@service},:remote=>true %>  | <%= link_to 'Cancel', :action=>'project',:id=>@project%> | <%= link_to 'Delete', {:action=>'delete_service',:id=>@service},:remote=>true,:confirm=>'Are you sure?' %>
</span>
<% end %>

</div>
<div class="clear">
	
</div>