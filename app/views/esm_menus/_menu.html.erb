<%
	@menu_actions= @project.menu_actions
	menus = @menu_actions.collect{|i| 
		
		if i.name
			[i.name.humanize,i.id] 
		else
			["[Untilted]",i.id]
		end
	}
%>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name ,:class=>tb_class  %>
</div>

<div class="field">
  <%= f.label :label %>
  <%= f.text_field :label,:class=>tb_class %>
</div>

<div class="field">
  <%= f.label :acl %>
  <%= f.text_field :acl,:class=>tb_class %>
</div>

<div class="field">
  <%= f.label :parent_id %>
  <%= f.select :parent_id, menus,:include_blank=>true %>
</div>

<div class="field">
  <%= f.label :url %>
  <%= f.text_field :url,:class=>tb_class %>
</div>

<div class="field">
  <%= f.label :published %>
  <%= f.check_box :published %>
</div>
<div class="field">
  <%= f.label :sort_order %>
  <%= f.text_field :sort_order ,:class=>tb_class%>
</div>
<%= f.hidden_field :esm_id, :value=>@project.esm.id %>
<%= f.hidden_field :project_id, :value=>@project.id %>



<script>
   $(document).ready(function(){
     $("#menu_action_parent_id").kendoDropDownList();
   });
</script>

