
<div class="box" style="width:100%;border:0px solid">
Container form
	
<%= form_for(:container,:url=>{:action=>"container_new",:id=>@document,:update=>'layout'},:remote=>true) do |f| %>
<br/>
<%= hidden_field_tag :id, @document.id %>
<%= render :partial=> 'container', :locals=>{:f=>f} %>
<span style='float:left'>
<%= f.submit 'Create' %> | <%= link_to 'Cancel', {:action=>'refresh_layout',:id=>@document},:remote=>true %> 
</span>
<% end %>

</div>
<div class="clear">
	
</div>